<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:id="@+id/popup_delete">

		<ImageButton
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:id="@+id/popup_btn_edit"
			android:src="@drawable/ic_edit_todo"
			android:tint="@color/white"
			android:theme="@style/MyButton"
			android:layout_weight="1" />

		<ImageButton
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:id="@+id/popup_btn_cancel_alarm"
			android:src="@drawable/ic_alarm_off_black_24dp"
			android:tint="@color/white"
			android:theme="@style/MyButton"
			android:layout_weight="1" />

		<ImageButton
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:id="@+id/popup_btn_set_alarm"
			android:src="@drawable/ic_alarm_add_black_24dp"
			android:tint="@color/white"
			android:theme="@style/MyButton"
			android:layout_weight="1" />


</LinearLayout>